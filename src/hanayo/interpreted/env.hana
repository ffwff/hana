record Env

    _getenv = Cffi::Function("getenv", [Cffi.String], Cffi.String)
    _setenv = Cffi::Function("setenv", [Cffi.String, Cffi.String, Cffi.Int64], Cffi.Int64)

    function get(k) begin
        return Cffi::call(Env._getenv, k)
    end

    function set(k, v) begin
        return Cffi::call(Env._setenv, k, v, 0)
    end
    function set!(k, v) begin
        return Cffi::call(Env._setenv, k, v, 1)
    end

end
